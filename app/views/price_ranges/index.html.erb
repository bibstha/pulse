<p id="notice"><%= notice %></p>

<h1>Price Ranges</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>Vendor</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @price_ranges.each do |price_range| %>
      <tr>
        <td><%= price_range.start_date %></td>
        <td><%= price_range.end_date %></td>
        <td><%= price_range.vendor %></td>
        <td><%= price_range.description %></td>
        <td><%= link_to 'Show', price_range %></td>
        <td><%= link_to 'Edit', edit_price_range_path(price_range) %></td>
        <td><%= link_to 'Destroy', price_range, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

